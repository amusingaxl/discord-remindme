{
  "name": "remindme-discord",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node src/bot.js",
    "deploy": "node scripts/deploy.js",
    "deploy:prod": "node scripts/deploy.js --production",
    "dev": "node scripts/dev.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "chrono-node": "^2.8.4",
    "discord.js": "^14.21.0",
    "i18next": "^25.3.4",
    "i18next-fs-backend": "^2.6.0",
    "luxon": "^3.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^29.7.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,jsonc}": [
      "prettier --write"
    ],
    "**/*.{yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
